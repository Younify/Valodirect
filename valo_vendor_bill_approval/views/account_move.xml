<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_invoice_tree_approval" model="ir.ui.view">
            <field name="name">view_invoice_tree_approval</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree" />
            <field name="arch" type="xml">

            <field name="state" position="after">
                
                  <field name="release_to_pay" widget="badge" optional="hide"
                                        decoration-danger="release_to_pay == 'no'"
                                        decoration-warning="release_to_pay == 'waiting'"
                                        decoration-success="release_to_pay == 'yes'"/>

            </field>

            </field>

            </record>

        <record id="view_move_form_approval" model="ir.ui.view">
            <field name="name">view_move_form_approval</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">

                <button name="button_draft" position="after">
                    <button name="action_open_approve_lines_wizard" string="Approve" type="object"
                        class="oe_highlight" attrs="{'invisible': [('state', '!=', 'posted')]}"></button>

                    <button name="action_restart_approval" string="Restart Approval" type="object" groups="valo_vendor_bill_approval.group_account_approver"
                        class="oe_highlight" attrs="{'invisible': [('state', '!=', 'posted')]}"></button>
                </button>

                  <field name="invoice_vendor_bill_id" position="after">
                    <field name="move_type" invisible="1" />
                    <field name="release_to_pay" widget="badge" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund'))]}"
                        decoration-danger="release_to_pay == 'no'"
                        decoration-warning="release_to_pay == 'waiting'"
                        decoration-success="release_to_pay == 'yes'"/>
                </field>

                <page name="other_info" position="before">

                    <page name="approvers" string="Approvers">
                        <field name="approval_line_id">
                            <tree>
                                <field name="user_id"></field>

                                <field name="release_to_pay_status" widget="badge"
                                        decoration-danger="release_to_pay_status == 'no'"
                                        decoration-warning="release_to_pay_status == 'waiting'"
                                        decoration-success="release_to_pay_status == 'yes'"/>

                                <field name="approval_date"></field>
                                <field name="override"></field>
                                <field name="all_lines_reviewed"></field>
                            </tree>
                        </field>
                    </page>

                </page>


            </field>
        </record>

        <record id="account_3way_match_inherit_valo_3way" model="ir.ui.view">
            <field name="name">account_3way_match_inherit_valo_3way</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account_3way_match.account_invoice_form_inherit" />
            <field name="arch" type="xml">

                
                <xpath expr="//label[@for='release_to_pay_manual']" position="replace">
                </xpath>
                <xpath expr="//label[@for='force_release_to_pay']" position="replace">
                </xpath>
                <field name="release_to_pay" position="replace" />
                <field name="release_to_pay_manual" position="replace" />
                <field name="force_release_to_pay" position="replace" />
                <field name="to_check" position="replace" />

                <xpath expr="//notebook//page[@name='other_info']//div[@class='o_row']" position="replace"></xpath>


            </field>
        </record>

        <record id="account_invoice_filter_inherit_account_3way_match_valo" model="ir.ui.view">
            <field name="name">account.move.view.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id"
                ref="account_3way_match.account_invoice_filter_inherit_account_3way_match" />
            <field name="arch" type="xml">

                <filter name="exception" position="replace">
                    <filter name="waiting_approval" string="Waiting Approval"
                        domain="[('release_to_pay', '=', 'waiting'),('state','=','posted')]"
                        context="{'group_by': 'pending_approvers'}" />
                    <filter name="declined_approval" string="Declined Approval"
                        domain="[('release_to_pay', '=', 'no'),('state','=','posted'),('payment_state','in', ('not_paid','partial'))]" />
                </filter>


            </field>
        </record>

    </data>

</odoo>