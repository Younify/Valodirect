<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_approval" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40" />
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='default_taxes_setting_container']" position="after">

                    <h2>Approval</h2>
                    <div class="row mt16 o_settings_container "
                        name="vendor_bill_approval_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="vendor_bill_approvers"
                                            class="col-lg-4 o_light_label" />
                                        <field name="vendor_bill_approvers" widget="many2many_tags"></field>
                                    </div>

                                    <div class="row mt16">
                                        <label for="vendor_bill_unit_price_margin"
                                            class="col-lg-4 o_light_label" />
                                        <field name="vendor_bill_unit_price_margin"
                                            widget="percentage"></field>
                                    </div>

                                    <div class="row mt16">
                                        <label for="vendor_bill_total_untaxed_margin"
                                            class="col-lg-4 o_light_label" />
                                        <field name="vendor_bill_total_untaxed_margin"
                                            widget="percentage"></field>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </xpath>
            </field>
        </record>


    </data>
</odoo>