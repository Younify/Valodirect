<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="group_account_analytic_line_approver_only" model="res.groups">
            <field name="name">Analytic lines only my approval lines</field>
            <field name="category_id" ref="base.module_category_hidden" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>

        <record id="account_analytic_line_rule_approver" model="ir.rule">
            <field name="name">account.analytic.line.rule.approver</field>
            <field name="model_id" ref="analytic.model_account_analytic_line" />
            <field name="domain_force">
                ['|',('approver_ids','=',False),('approver_ids', 'in', user.id)]
            </field>
            <field name="groups"
                eval="[(4, ref('valo_vendor_bill_approval_approver_only.group_account_analytic_line_approver_only'))]" />
        </record>


    </data>

</odoo>